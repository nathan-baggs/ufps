# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli,lua}]
charset = utf-8
indent_style = space
indent_size = 4

[{CMakeLists.txt,*.cmake,*.rst}]
indent_size = 2
indent_style = space

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

